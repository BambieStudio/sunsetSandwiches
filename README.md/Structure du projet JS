// ===== GESTION DES ÉCRANS =====
function showWelcomeScreen() {
    hideAllScreens();
    domElements.welcomeScreen.classList.remove('hidden');
}

function startIntro() {
    hideAllScreens();
    domElements.introScreen.classList.remove('hidden');
    // Initialiser le dialogue
}

function startGame() {
    hideAllScreens();
    domElements.mainGameScreen.classList.remove('hidden');
    setupLevel(gameState.currentLevel);
    startTimer();
}

